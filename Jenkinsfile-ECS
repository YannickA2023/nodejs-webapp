pipeline {
    agent any


    environment {
        Yancko_AWS_ACCESS_KEY_ID = credentials ('yancko-acces')
        Yancko_AWS_SECRET_ACCESS_KEY = credentials ('yancko-secret')
        AWS_DEFAULT_REGION = "us-east-2"
    }
    stages {
        stage('Checkout') {
            steps {
           git branch: 'main', url: 'https://github.com/YannickA2023/nodejs-webapp'
  
            }
        }
    
        stage ("terraform init") {
            steps {
                sh "terraform init" 
            }
        }
  
        stage ("plan") {
            steps {
                sh "terraform plan" 
            }
        }
        stage (" Action") {
            steps {
                sh 'terraform ${action} --auto-approve' 
           }
        }
    }
}
   
    
